{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Leetcode C++ compile",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I", "${workspaceFolder}",
                // "-no-pie",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/leetcode/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "Test case C++ compile",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I", "${workspaceFolder}",
                // "-no-pie",
                "-g",
                "-O0",
                "${file}",
                "-o",
                "${workspaceFolder}/build/test/${fileBasenameNoExtension}",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

