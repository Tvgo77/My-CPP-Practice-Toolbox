                //"-no-pie",
                "-g",
                "${file}",
                //"${workspaceFolder}/lib/syscall_wrap.o",
                "${workspaceFolder}/lib/syscall_wrap.so",
                "-o",
                "${workspaceFolder}/build/test/${fileBasenameNoExtension}",
                "-lpthread"
            ],
